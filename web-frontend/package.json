    "autoprefixer": "^10.4.16",
    "babel-jest": "^29.6.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1"
  }
